<style>
/* Contenedor principal que envuelve todo */
.contenedor {
  position: relative;
  width: 100%; /* Ocupa todo el ancho */
  height: 20rem; /* Altura fija del contenedor */
  overflow: hidden; /* Asegura que no haya desbordes */
}

/* Sección superior de color */
.seccion-superior {
  background-color: var(--secondary-color); /* Color de la parte superior */
  width: 100%;
  height: 1rem; /* Altura fija de la sección superior */
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  animation: subir-seccion 1.5s ease-out forwards;
}

/* Línea serpenteante */
.separador-serpenteante {
  position: absolute;
  top: 10rem; /* Ubica la línea justo debajo de la sección superior */
  width: 100%;
  height: 40rem;
  z-index: 2;
  animation: subir-seccion 1.5s ease-out forwards;
}

.color-serpenteante {
  fill: var(--secondary-color); /* Color de la línea serpenteante */
}

/* Contenedor principal */
.contenedor-principal {
  background-color: var(--tertiary-color); /* Color del contenedor principal */
  padding: 2rem; /* Espaciado interno */
  position: relative;
  z-index: 1;
  margin-top: 14rem; /* Espacio para que quede debajo de la línea serpenteante */
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* Imagen centrada */
.imagen-centrada {
  max-width: 5cm; /* Ajusta el ancho máximo de la imagen */
  height: auto; /* Mantiene la proporción de la imagen */
  margin-bottom: 1rem;
  object-fit: contain;
  position: relative;
  z-index: 0;
  animation: bajar-imagen 1.5s ease-out forwards;
}

/* Contenedor de texto */
.contenedor-texto-portada {
  position: absolute;
  top: 9rem; /* Ajustable */
  left: 10rem; /* Ajustable */
  width: 60rem;
  padding: 0rem;
  z-index: 3; /* Por encima de la imagen */
  text-align: left;
}

/* Título del texto */
.titulo-texto-portada {
  font-size: 4rem;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 0.5rem;
}

/* Título del texto */
.titulo-texto-static-portada {
  font-size: 2rem;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 0.5rem;
}

/* Descripción del texto */
.descripcion-texto-static-portada {
  font-size: 1rem;
  color: var(--secondary-color);
}

/* Animación para subir la sección superior y la línea serpenteante */
@keyframes subir-seccion {
  from {
    transform: translateY(-10rem); /* Posición inicial */
  }
  to {
    transform: translateY(-17rem); /* Sección sube 5rem */
  }
}

/* Animación para bajar la imagen */
@keyframes bajar-imagen {
  from {
    transform: translateY(-25rem); /* Posición inicial */
  }
  to {
    transform: translateY(-14rem); /* Imagen baja 5rem */
  }
}

