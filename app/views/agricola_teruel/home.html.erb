document.getElementById('video_modal').addEventListener('shown.bs.modal', function() {
  // Agrega seguridad para verificar que el elemento exista y el videoSrc no esté vacío
  let videoElement = document.getElementById('video');
  if (videoElement && videoSrc) {
    videoElement.src = `${videoSrc}?autoplay=1&modestbranding=1&showinfo=0`;
  }
});

document.getElementById('video_modal').addEventListener('hide.bs.modal', function() {
  let videoElement = document.getElementById('video');
  if (videoElement) {
