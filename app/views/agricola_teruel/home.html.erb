<script>
$(document).ready(function () {
  // Inicializar clases
  actualizarClases($('.carosel-inner'));

  // Control derecho
  $('.carosel-control-right').click(function (e) {
    e.preventDefault();
    $(this).blur();
    const $carouselInner = $(this).siblings('.carosel-inner');

    // Mover el primer elemento al final
    $carouselInner.find('.carosel-item').first().appendTo($carouselInner);

    // Actualizar clases
    actualizarClases($carouselInner);
  });

  // Control izquierdo
  $('.carosel-control-left').click(function (e) {
    e.preventDefault();
    $(this).blur();
    const $carouselInner = $(this).siblings('.carosel-inner');

    // Mover el último elemento al inicio
    $carouselInner.find('.carosel-item').last().prependTo($carouselInner);

    // Actualizar clases
    actualizarClases($carouselInner);
  });

  // Función para actualizar las clases dinámicamente
  function actualizarClases($carouselInner) {
    const $items = $carouselInner.find('.carosel-item');
    $items.removeClass('central'); // Quitar la clase central de todos los elementos
    $items.css('opacity', '0.5'); // Restablecer opacidad de todos los elementos
