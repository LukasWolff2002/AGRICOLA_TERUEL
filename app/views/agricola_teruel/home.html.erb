    var leftHeight = rightCardHeight - overlapHeight;

    leftCard2.style.height = `${leftHeight}px`;
  }

  // Llama a updateHeights al cargar la página
  updateHeights();

  // Llama a updateHeights cada vez que la ventana cambia de tamaño
