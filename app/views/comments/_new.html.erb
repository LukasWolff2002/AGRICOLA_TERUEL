<%= form_with model: @comment, local: true, html: { class: "comment-form" } do |form| %>
  <div class="form-group">
    <%= form.label :Nombre, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= form.label :Mail , class: "form-label" %>
    <%= form.email_field :mail, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= form.label :Comentario , class: "form-label" %>
    <%= form.text_area :comment, class: "form-control", required: true %>
  </div>
  <div class="form-actions">
    <%= form.submit "Publicar Comentario", class: "btn btn-primary" %>
  </div>
<% end %>
