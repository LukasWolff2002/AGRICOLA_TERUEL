<style>
/* ========================= */
/* Estilos Generales del Contenedor */
/* ========================= */
.contenedor-portada-catalogo {
  position: relative;
  width: 100%;
  overflow: hidden;
  background-color: var(--sex-color); /* Color de fondo */
}

/* Sección superior de color */
.seccion-superior-portada-catalogo {
  background-color: var(--sex-color);
  width: 100%;
  height: 1rem;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

/* Línea serpenteante */
.separador-serpenteante-portada-catalogo {
  position: absolute;
  top: -3rem; /* Posición inicial */
  width: 100%;
  height: auto;
  z-index: 1;
}

.color-serpenteante-portada-catalogo {
  fill: var(--secondary-color);
}

/* Contenedor principal */
.contenedor-principal-portada-catalogo {
  background-color: var(--sex-color);
  padding: 2rem;
  position: relative;
  z-index: 1;
  margin-top: 14rem;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.contenedor-imagenes {
  position: relative;
  width: 100%;
  overflow: hidden;
}


/* Imagen centrada */
.imagen-1 {
  
  object-fit: contain;
  position: relative;
  z-index: 10;
}

/* Imagen centrada */
.imagen-2 {
  
  object-fit: contain;
  position: relative;
  z-index: 11;
}

/* Imagen centrada */
.imagen-3 {
 
  object-fit: contain;
  position: relative;
  z-index: 12;
}

/* Imagen centrada */
.imagen-4 {
 
  object-fit: contain;
  position: relative;
  z-index: 13;
}

/* Imagen centrada */
.imagen-5 {
  
  object-fit: contain;
  position: relative;
  z-index: 14;
}

/* Contenedor de texto */
.contenedor-texto-portada-catalogo {
  position: absolute;
  top: -1rem; /* Ajustable */
  left: 10rem; /* Ajustable */
  width: 60rem;
  padding: 0rem;
  z-index: 3; /* Por encima de la imagen */
  text-align: left;
}

/* Título del texto */
.titulo-texto-portada-catalogo {
  font-size: 4rem;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 0.5rem;
}

/* Descripción del texto */
.descripcion-texto-portada-catalogo {
  font-size: 1rem;
  color: var(--secondary-color);
  width: 30rem;
}

/* Contenedor de botones */
.botones-container {
  margin-top: 1.5rem;
  display: flex;
  justify-content: left;
  gap: 1rem;
}

/* Botones (enlaces) */
.boton-estilo {
  padding: 10px 20px;
  background-color: var(--primary-color);
  color: white;
  text-decoration: none;
  border-radius: 5px;
  font-size: 1rem;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.2s ease;
  display: inline-block;
}

.boton-estilo:hover {
  background-color: var(--secondary-color);
  transform: scale(1.05);
}

.boton-estilo:active {
  background-color: var(--tertiary-color);
  transform: scale(0.95);
}

/* ========================= */
/* Media Queries para Responsividad */
/* ========================= */

@media (min-width: 1501px) {
  .contenedor-principal-portada-catalogo {
    margin-top: 10rem;
    height: 15rem;
  }

  .separador-serpenteante-portada-catalogo {
    top: -8rem;
  }

  .contenedor-imagenes {
    height: 50rem;
    margin-top: -15rem;
  }



  .contenedor-texto-portada-catalogo {
    top: 0rem;
    left: 15rem;
    width: 60rem;
  }

  .titulo-texto-portada-catalogo {
    font-size: 4rem;
  }

  .descripcion-texto-portada-catalogo {
    font-size: 1.3rem;
    width: 30rem;
  }
}

@media (min-width: 1024px) and (max-width: 1500px) {
  .contenedor-principal-portada-catalogo {
    margin-top: 10rem;
    height: 10rem
  }

  .separador-serpenteante-portada-catalogo {
    top: -4rem;
  }

  .contenedor-imagenes {
    height: 50rem;
    margin-top: -15rem;
  }

  .imagen-1 {
    width: 20rem;
    margin-top: 0rem;
    margin-left: 70%;
  }

  .imagen-2 {
    width: 20rem;
    margin-top: -35rem;
    margin-left: 0%;
  }

  .imagen-3 {
    width: 15rem;
    margin-top: -30rem;
    margin-left: 10%;
  }

  .contenedor-texto-portada-catalogo {
    top: 0rem;
    left: 6rem;
    width: 60rem;
  }

  .titulo-texto-portada-catalogo {
    font-size: 5rem;
  }

  .descripcion-texto-portada-catalogo {
    font-size: 1.15rem;
    width: 30rem;
  }
}
</style>



