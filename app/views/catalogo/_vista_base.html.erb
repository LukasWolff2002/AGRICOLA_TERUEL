<div class="contenedor-portada-catalogo">
  <!-- Sección superior de color -->
  <div class="seccion-superior-portada-catalogo"></div>

  <!-- Línea serpenteante -->
  <svg class="separador-serpenteante-portada-catalogo" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
    <path class="color-serpenteante-portada-catalogo" d="M0,192L60,186.7C120,181,240,171,360,181.3C480,192,600,224,720,218.7C840,213,960,171,1080,154.7C1200,139,1320,149,1380,154.7L1440,160L1440,0L1380,0C1320,0,1200,0,1080,0C960,0,840,0,720,0C600,0,480,0,360,0C240,0,120,0,60,0L0,0Z"></path>
  </svg>

  <!-- Contenedor principal -->
  <div class="contenedor-principal-portada-catalogo">
    <!-- Imagen centrada -->
    <% if portada_image.present? %>
      <img class="imagen-centrada-portada-catalogo" src="<%= asset_path(portada_image) %>" alt="Imagen centrada">
    <% end %>

    <!-- Contenedor para texto -->
    <div class="contenedor-texto-portada-catalogo">
      <h2>
        <% if product_title.present? %>
          <span class="titulo-texto-portada-catalogo colored-text font-georgia-normal" style="color: white"><%= product_title %></span>
        <% end %>
      </h2>
      <% if product_description.present? %>
        <p class="descripcion-texto-portada-catalogo" style="color: white"><%= product_description %></p>
      <% else %>
        <p>Pronto actualizaremos esta sección</p>
      <% end %>
    </div>
  </div>
</div>

<style>
/* ========================= */
/* Estilos Generales del Contenedor */
/* ========================= */
.contenedor-portada-catalogo {
  position: relative;
  width: 100%;
  overflow: hidden;
  background-color: var(--sex-color); /* Color de fondo */
}

/* Sección superior de color */
.seccion-superior-portada-catalogo {
  background-color: var(--sex-color);
  width: 100%;
  height: 1rem;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

/* Línea serpenteante */
.separador-serpenteante-portada-catalogo {
  position: absolute;
  top: -3rem; /* Posición inicial */
  width: 100%;
  height: auto;
  z-index: 1;
}

.color-serpenteante-portada-catalogo {
  fill: var(--secondary-color);
}

/* Contenedor principal */
.contenedor-principal-portada-catalogo {
  background-color: var(--sex-color);
  padding: 2rem;
  position: relative;
  z-index: 1;
  margin-top: 14rem;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* Imagen centrada */
.imagen-centrada-portada-catalogo {
  width: 25rem;
  height: auto;
  margin-top: -17rem;
  margin-left: 40rem;
  object-fit: contain;
  position: relative;
  z-index: 10;
}

/* Contenedor de texto */
.contenedor-texto-portada-catalogo {
  position: absolute;
  top: -1rem; /* Ajustable */
  left: 10rem; /* Ajustable */
  width: 60rem;
  padding: 0rem;
  z-index: 3; /* Por encima de la imagen */
  text-align: left;
}

/* Título del texto */
.titulo-texto-portada-catalogo {
  font-size: 4rem;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 0.5rem;
}

/* Descripción del texto */
.descripcion-texto-portada-catalogo {
  font-size: 1rem;
  color: var(--secondary-color);
  width: 30rem;
}

/* Contenedor de botones */
.botones-container {
  margin-top: 1.5rem;
  display: flex;
  justify-content: left;
  gap: 1rem;
}

/* Botones (enlaces) */
.boton-estilo {
  padding: 10px 20px;
  background-color: var(--primary-color);
  color: white;
  text-decoration: none;
  border-radius: 5px;
  font-size: 1rem;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.2s ease;
  display: inline-block;
}

.boton-estilo:hover {
  background-color: var(--secondary-color);
  transform: scale(1.05);
}

.boton-estilo:active {
  background-color: var(--tertiary-color);
  transform: scale(0.95);
}

